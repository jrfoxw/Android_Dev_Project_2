<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.py_dev.movieshow.DetailsActivity"
    android:alpha="5"
    android:id="@+id/inner_details"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="569dp"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.16">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="700dp"
            android:layout_height="710dp"
            android:weightSum="1"
            android:id="@+id/base_layout"
            android:background="#000">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Release Date"
                android:textColor="#CCC"
                android:id="@+id/releaseDateView"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:textColor="#f8e767"
                android:id="@+id/titleView"

                android:paddingStart="5dp"
                android:textSize="24sp"
                android:textIsSelectable="false"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="730dp"
                android:layout_height="484dp"
                android:id="@+id/posterView"
                android:cropToPadding="false"
                android:src="@drawable/nodata"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#000"
            android:layout_alignRight="@+id/base_layout"
            android:layout_alignEnd="@+id/base_layout"
            android:id="@+id/linearLayout3"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/favorite_btn"
                android:src="@android:drawable/btn_star"

                android:layout_marginRight="2dp"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Popularity:"
                android:id="@+id/popularityLabel"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="49.443"
                android:id="@+id/popularityView"
                android:textColor="#efd14b"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textStyle="italic"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Votes: "
                android:id="@+id/votesLabel"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1200"
                android:id="@+id/votesView"
                android:textColor="#97f09d"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textStyle="italic"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="3sp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Average: "
                android:id="@+id/votesAverageLabel"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="7.93"
                android:id="@+id/votesAverageView"
                android:textColor="#1838ed"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textStyle="italic"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5sp"
                android:singleLine="false"
                android:shadowColor="#f5e3e3" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="238dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/linearLayout3"
            android:background="#000"
            android:layout_marginTop="65dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:id="@+id/ibtn_trailer1"
                    android:background="@android:drawable/ic_media_play" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/shareBtn"
                    android:src="@android:drawable/ic_menu_share"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRAILER 1"
                android:id="@+id/text_trailer1"
                android:textColor="#ffffff"
                android:layout_marginBottom="15dp"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/ibtn_trailer2"
                android:background="@android:drawable/ic_media_play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRAILER 2"
                android:id="@+id/text_trailer2"
                android:textColor="#ffffff"
                android:layout_marginBottom="15dp"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:background="#000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Overview"
                android:id="@+id/overviewBtn"
                android:textColor="#c1b02c"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="32sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Reviews"
                android:id="@+id/reviewBtn"
                android:textColor="#c1b02c"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewDetails"
                android:visibility="gone"
                android:headerDividersEnabled="true"
                android:footerDividersEnabled="true"
                android:divider="#555"
                android:dividerHeight="2dp" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView2"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="(insight) Glancing at the thug who is eyeing you, you don&apos;t notice anything in particular, You keep him in your peripheral as he subtly elbows one of the guards next to him and nods in your general direction. It appears you&apos;ve been noticed as you can see the two moving in a beeline straight toward you...  (Perception) The thug looks like a typical warehouse worker but is carrying something in his hand, that you can&apos;t make out. The guard is more heavily armed than the thug, and appears to be wearing body armor of some sort. His left hand touches a sidearm on his left leg; his other hand grips a strap attached to a rifle barrel protruding from above his right shoulder.  You see a ladder not far from you heading into the upper level of the warehouse, to the right are several large crates that you could hide behind, you could also enter to the maze of crates to your left that run near the rear exit of the warehouse. There are also a few items like metal poles, wrenches, fire extinguishers that litter the area around you..."
                    android:id="@+id/overviewView"
                    android:textColor="#FFF"
                    android:layout_marginTop="15dp"

                    android:autoText="false"

                    android:textSize="24sp"
                    android:layout_marginBottom="0dp"
                    android:hint="Movie overview"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="fill" />
            </ScrollView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>



